{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "outDir": "build",
    "sourceMap": true,
    "strict": false,
    "target": "es5"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "build"
  ]
}
